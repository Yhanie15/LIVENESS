<!-- src/presentation/views/admin/auth/forgot-password.ejs -->
<div class="forgot-section">
    <h1>ADMIN FORGOT PASSWORD</h1>
    <p>Enter your username and email to receive password reset instructions.</p>
    <% if (locals.message) { %>
      <div class="notification success"><p><%= message %></p></div>
    <% } %>
    <% if (locals.error) { %>
      <div class="notification error"><p><%= error %></p></div>
    <% } %>
    <form action="/admin/forgot-password" method="POST">
      <div class="input-group">
        <i class="fa fa-user input-icon"></i>
        <input type="text" name="username" placeholder="Username" required />
      </div>
      <div class="input-group">
        <i class="fa fa-envelope input-icon"></i>
        <input type="email" name="email" placeholder="Email" required />
      </div>
      <button type="submit" class="submit-btn">SUBMIT</button>
    </form>
    <a href="/admin/login" class="back-to-login">Sign in Here</a>
  </div>

