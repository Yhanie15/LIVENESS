<!--Scheduler-modal.ejs-->
<div id="sched-modal-container" class="sched-modal-hidden">
  <div id="sched-modal-overlay"></div>
  <div id="sched-modal-content">
    <!-- Header with gradient background -->
    <div id="sched-modal-header">
      <h2 id="sched-modal-title">Scheduler</h2>
      <p id="sched-modal-subtitle">Select when you want the model training to begin</p>
      <button id="sched-modal-close-btn" aria-label="Close">
        <i class="bi bi-x"></i>
      </button>
    </div>
   
    <!-- Modal body with selection fields -->
    <div id="sched-modal-body">
      <!-- Date and Time sections side by side -->
      <div id="sched-modal-selections">
        <!-- Date Selection -->
        <div id="sched-modal-date-section">
          <div class="sched-modal-section-header">
            <i class="bi bi-calendar"></i>
            <h3>Date Selection</h3>
          </div>
          <div class="sched-modal-input-container">
            <input type="text" id="sched-modal-date-input" placeholder="Select date" readonly>
          </div>
        </div>
       
        <!-- Time Selection -->
        <div id="sched-modal-time-section">
          <div class="sched-modal-section-header">
            <i class="bi bi-clock"></i>
            <h3>Time Selection</h3>
          </div>
          <div class="sched-modal-time-inputs">
            <input type="text" id="sched-modal-hour-input" placeholder="Hour">
            <span class="sched-modal-time-separator">:</span>
            <input type="text" id="sched-modal-minute-input" placeholder="Minutes">
            <div id="sched-modal-ampm-dropdown">
              <button id="sched-modal-ampm-btn">
                <span id="sched-modal-ampm-text">AM</span>
                <i class="bi bi-chevron-down"></i>
              </button>
              <div id="sched-modal-ampm-options" class="sched-modal-hidden">
                <div class="sched-modal-ampm-option" data-value="AM">AM</div>
                <div class="sched-modal-ampm-option" data-value="PM">PM</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Manual Retraining Option -->
      <!-- <div id="sched-modal-manual-section">
        <div class="sched-modal-section-header">
          <i class="bi bi-arrow-repeat"></i>
          <h3>Manual Retraining</h3>
        </div>
        <p class="sched-modal-section-desc">Start model retraining immediately</p>
        <button id="manual-retrain-btn" class="sched-modal-secondary-btn">
          <i class="bi bi-play-fill"></i> Start Manual Retraining
        </button>
      </div> -->
    </div>
   
    <!-- Footer with save button -->
    <div id="sched-modal-footer">
      <button id="sched-modal-save-btn">Save</button>
    </div>
  </div>
</div>
