<!-- Scheduler Modal -->
<div id="schedModal" class="sched-modal">
    <div class="sched-modal-content">
      <div class="sched-modal-header">
        <h2>Scheduler</h2>
        <span class="sched-close-btn">&times;</span>
      </div>
      <div class="sched-modal-body">
        <p>Select when you want the model training to begin</p>
       
        <div class="sched-modal-form">
          <div class="sched-form-group">
            <div class="sched-form-label">
              <i class="sched-circle-icon"></i>
              <span>Date Selection</span>
            </div>
            <input type="text" id="schedDatePicker" class="sched-form-control" placeholder="Select date">
          </div>
         
          <div class="sched-form-group">
            <div class="sched-form-label">
              <i class="sched-circle-icon"></i>
              <span>Time Selection</span>
            </div>
            <div class="sched-time-inputs">
              <input type="text" id="schedHourInput" class="sched-form-control sched-time-input" placeholder="Hour">
              <input type="text" id="schedMinuteInput" class="sched-form-control sched-time-input" placeholder="Minutes">
              <select id="schedAmpmSelect" class="sched-form-control sched-time-select">
                <option value="AM">AM</option>
                <option value="PM">PM</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="sched-modal-footer">
        <button id="schedSaveButton" class="sched-btn-save">Save</button>
      </div>
    </div>
  </div>