<!-- Add User Modal -->
<div class="add-user-modal-overlay" id="addUserModal">
  <div class="add-user-modal-container">
    <div class="add-user-modal-header">
      <h2>Add User</h2>
      <button class="add-user-modal-close-btn">&times;</button>
    </div>
    <div class="add-user-modal-body">
      <!-- Feedback message will be inserted here by JavaScript -->
      <form id="addUserForm" class="add-user-form">
        <div class="form-group">
          <label for="fullName">Username</label>
          <div class="input-wrapper">
            <i class="bi bi-person"></i>
            <input type="text" id="fullName" name="name" class="form-control" placeholder="Enter username" required>
          </div>
        </div>
       
        <div class="form-group">
          <label for="email">Email</label>
          <div class="input-wrapper">
            <i class="bi bi-envelope"></i>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter email address" required>
          </div>
        </div>
       
        <div class="form-group">
          <label for="password">Password</label>
          <div class="input-wrapper">
            <i class="bi bi-key"></i>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter password (min 8 characters)" required minlength="8">
            <button type="button" class="password-toggle-btn" id="passwordToggle">
              <i class="bi bi-eye"></i>
            </button>
          </div>
        </div>
       
        <div class="form-group">
          <label for="companyCode">Company Code</label>
          <div class="input-wrapper">
            <i class="bi bi-building"></i>
            <input type="text" id="companyCode" name="compCode" class="form-control" placeholder="Enter company code" required>
          </div>
        </div>
       
        <div class="add-user-modal-footer">
          <button type="button" class="add-user-btn-cancel">Cancel</button>
          <button type="submit" class="add-user-btn-save">Add User</button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  /* Feedback message styling */
  .add-user-feedback {
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 4px;
    display: none;
  }
  
  .add-user-feedback.success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }
  
  .add-user-feedback.error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }
</style>