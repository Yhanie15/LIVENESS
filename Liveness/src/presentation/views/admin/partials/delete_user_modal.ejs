<div id="deleteUserModal" class="delete-user-modal-overlay hidden">
    <div class="delete-user-modal-container">
      <div class="delete-user-modal-header">
        <h2>Delete User</h2>
        <button class="delete-user-modal-close-btn">
          <i class="bi bi-x"></i>
        </button>
      </div>
      <div class="delete-user-modal-body">
        <p class="delete-user-modal-question">Are you sure you want to delete this user?</p>
