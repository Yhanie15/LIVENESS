<!-- In admin/layouts/userlog_page.ejs -->
<div class="search-filter-row">
  <%- include('../partials/search') %>
  <div class="action-buttons">
    <%- include('../partials/filter') %>
    <%- include('../partials/export') %>
  </div>
</div>

<div class="table-container">
  <div class="report-table-wrapper">
    <div class="table-body-container">
      <table class="report-table">
        <thead>
          <tr>
            <th>COMPANY CODE</th>
            <th>EMPLOYEE ID</th>
            <th>ACTIVITY</th>
            <th>DATE</th>
            <th>TIME</th>
            <th>IMAGE</th>
          </tr>
        </thead>
        <tbody>
          <% if (typeof userlogs !== 'undefined' && userlogs.length > 0) { %>
            <% userlogs.forEach(userlog => { %>
              <tr>
                <td><%= userlog.company %></td>
                <td><%= userlog.id %></td>
                <td><%= userlog.activity !== null ? userlog.activity : 'N/A' %></td>
                <td><%= userlog.date %></td>
                <td><%= userlog.time %></td>
                <td>
                  <div class="profile-image-container">
                    <% if (userlog.image) { %>
                      <img 
                        src="<%= userlog.image %>" 
                        alt="Profile" 
                        class="profile-image"
                        loading="lazy"
                        width="100"
                        height="100"
                      >
                    <% } else { %>
                      <img 
                        src="/images/avatar.png" 
                        alt="Default Profile" 
                        class="profile-image"
                        loading="lazy"
                        width="100"
                        height="100"
                      >
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="7" class="no-records">No records found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include('../partials/pagination') %>
</div>